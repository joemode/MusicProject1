<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artworkView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_music" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/dummy"
        android:id="@+id/nameText"
        android:layout_alignTop="@+id/artworkView"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toStartOf="@+id/durationText"
        android:layout_toLeftOf="@+id/durationText"
        android:layout_toRightOf="@+id/artworkView"
        android:layout_toEndOf="@+id/artworkView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearance"
        android:text="@string/dummy"
        android:id="@+id/artistText"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_below="@+id/nameText"
        android:layout_toRightOf="@+id/artworkView"
        android:layout_toEndOf="@+id/artworkView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/dummy"
        android:id="@+id/durationText"
        android:layout_above="@+id/artistText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:paddingLeft="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/durationText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"/>

</RelativeLayout>