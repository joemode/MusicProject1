<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artworkView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_music"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/dummy"
        android:id="@+id/primaryText"
        android:layout_alignTop="@+id/artworkView"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toLeftOf="@+id/rightView"
        android:layout_toStartOf="@+id/rightView"
        android:layout_toRightOf="@+id/artworkView"
        android:layout_toEndOf="@+id/artworkView"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearance"
        android:text="@string/dummy"
        android:id="@+id/subText"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_below="@+id/primaryText"
        android:layout_toRightOf="@+id/artworkView"
        android:layout_toEndOf="@+id/artworkView"
        android:textColor="@color/colorDarkGray"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerVertical="true"></LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rightView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/artworkView"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@+id/artworkView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/dummy"
            android:id="@+id/rightText"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_gravity="center_vertical"
            android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="15dp" />

    </LinearLayout>

</RelativeLayout>